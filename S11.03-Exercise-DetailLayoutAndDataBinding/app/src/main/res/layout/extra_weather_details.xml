<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_humidity_label"
            android:text="@string/humidity_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_humidity"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/details_humidity_label"
            android:layout_marginTop="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_pressure_label"
            android:text="@string/pressure_label"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/details_humidity_label"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/details_humidity_label" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_pressure"
            app:layout_constraintTop_toTopOf="@+id/details_pressure_label"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/details_humidity" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_wind_label"
            android:text="@string/wind_label"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/details_pressure_label"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/details_pressure_label" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_wind"
            app:layout_constraintTop_toTopOf="@+id/details_wind_label"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/details_pressure" />
    </android.support.constraint.ConstraintLayout>
</layout>